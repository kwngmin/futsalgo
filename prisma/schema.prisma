}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ========== ENUMS ==========

enum Foot {
  LEFT
  RIGHT
  BOTH
}

enum Gender {
  MALE
  FEMALE
}

enum Condition {
  NORMAL
  INJURED
}

// enum FootballPosition {
//   ST
//   LW
//   RW
//   AM
//   CM
//   DM
//   CB
//   LB
//   RB
//   GK
// }

enum Position {
 PIVO
 ALA
 FIXO
 GOLEIRO
}

enum TeamMemberStatus {
  PENDING
  APPROVED
  REJECTED
  LEAVE
}

enum TeamMemberRole {
  OWNER     // 팀장
  MANAGER   // 매니저  
  MEMBER    // 일반 멤버
}

enum BoardType {
  GENERAL
  NOTICE
}

enum TeamGender {
  MALE
  FEMALE
  MIXED  
}

// enum RejectReason {
//   SCHEDULE_CONFLICT  // 일정 충돌
//   LOCATION_ISSUE     // 장소 문제
//   TEAM_CONDITION     // 팀 컨디션
//   OTHER              // 기타
// }

enum ActivityFrequency {
  WEEKLY      // 주 1회
  BIWEEKLY    // 격주
  MONTHLY     // 월 1회
  IRREGULAR   // 불규칙
}

enum PlayerBackground {
  NON_PROFESSIONAL  // 비선출
  PROFESSIONAL      // 선출
}

enum PlayerSkillLevel {
  BEGINNER     // 스타터
  AMATEUR      // 아마추어
  ACE          // 에이스
  SEMIPRO      // 세미프로
}

enum TeamLevel {
  VERY_LOW     // 하
  LOW          // 중하
  MID          // 중
  HIGH         // 중상
  VERY_HIGH    // 상
}

enum TeamStatus {
  ACTIVE
  INACTIVE
  DISBANDED
}

enum RecruitmentStatus {
  RECRUITING     // 모집중
  NOT_RECRUITING // 모집 안함
}

enum MatchType {
  SQUAD
  TEAM
}

enum ScheduleStatus {
  PENDING      // 팀매치 수락 대기
  READY        // 경기 준비 완료 
  REJECTED     // 팀매치 거절됨
  PLAY         // 경기 시작됨 → 참석 여부 변경 불가
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum TeamSide {
  HOME
  AWAY
  UNDECIDED
}

// ========== AUTHENTICATION MODELS ==========

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   
  @@map("sessions")
}

// ========== CORE MODELS ==========

model User {
  id              String     @id @default(cuid())
  email           String?    @unique
  emailVerified   DateTime?  @map("email_verified")
  name            String?
  nickname        String?    @unique

  accounts        Account[]
  sessions        Session[]

  phone           String?   @unique
  image           String?

  foot            Foot?   // 'left' | 'right' | 'both'
  gender          Gender?   // 'male' | 'female'
  birthDate       String?   // YYYYMMDD 형식 (예: "19850312")
  height          Int?
  weight          Int?
  condition       Condition @default(NORMAL)

  playerBackground PlayerBackground @default(NON_PROFESSIONAL) // 선수 출신 여부
  skillLevel       PlayerSkillLevel @default(BEGINNER) // 실력 수준

  position        Position?   
  teams           TeamMember[]

  // 팔로잉
  following       UserFollow[] @relation("Follower")    // 내가 팔로우하는 사람들
  followers       UserFollow[] @relation("Following")   // 나를 팔로우하는 사람들
  followingTeams  TeamFollow[]

  // 일정 관련
  createdSchedules Schedule[]
  attendances     ScheduleAttendance[]
  comments        ScheduleComment[]

  // 매치 관련
  createdMatches  Match[]
  lineups         Lineup[]
  goals           GoalRecord[] @relation("Scorer")
  assists         GoalRecord[] @relation("Assist")

  // 게시판
  posts           Post[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
   
  @@map("users")
}

// 유저 간 팔로잉 관계
model UserFollow {
  id          String   @id @default(cuid())
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

// 팀 팔로잉 (기존 TeamLike 대체)
model TeamFollow {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
  @@map("team_follows")
}

model Team {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique // 가입 코드
  logoUrl       String?
  coverUrl      String?
  city          String
  district      String
  description   String?

  status        TeamStatus @default(ACTIVE)
  recruitmentStatus RecruitmentStatus @default(RECRUITING)

  gender        TeamGender
  level         TeamLevel @default(MID)
  activityFrequency ActivityFrequency @default(WEEKLY)

  members       TeamMember[]  // TeamManager 제거하고 TeamMember로 통합
  posts         Post[]
  followers     TeamFollow[]  // 팔로워 (기존 likedByUsers 대체)

  // 일정 관련
  hostedSchedules  Schedule[] @relation("HostTeam")
  guestSchedules   Schedule[] @relation("GuestTeam")
  invitations      TeamMatchInvitation[]

  // 매치 관련
  homeMatches      Match[]    @relation("MatchHomeTeam")
  awayMatches      Match[]    @relation("MatchAwayTeam")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([city, district])  // 지역 검색을 위한 인덱스
  @@index([level, gender])  // 종목별 검색을 위한 인덱스
  @@map("teams")
}

// TeamManager 모델 제거하고 TeamMember로 통합
model TeamMember {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  status    TeamMemberStatus @default(PENDING)
  role      TeamMemberRole   @default(MEMBER)   // 역할 추가
  banned    Boolean @default(false)
  joinedAt  DateTime?        // 실제 승인된 날짜
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bannedAt  DateTime?
  
  @@unique([teamId, userId], map: "team_user_unique")
  @@index([userId, status], map: "user_status_idx")
  @@index([teamId, status], map: "team_status_idx")
  @@index([teamId, role], map: "team_role_idx")
  @@index([teamId, role, status], map: "team_role_status_idx")
  @@map("team_members")
}

// ========== SCHEDULE & MATCH MODELS ==========

model Schedule {
  id                 String         @id @default(cuid())
  title              String?
  place              String
  description        String?
  date               DateTime
  year               Int            // 연도 기반 통계용
  startTime          DateTime
  endTime            DateTime
  matchType          MatchType
  status             ScheduleStatus @default(PENDING)
  
  createdById        String
  hostTeamId         String
  guestTeamId        String?

  // 관계들
  createdBy          User      @relation(fields: [createdById], references: [id])
  hostTeam           Team      @relation("HostTeam", fields: [hostTeamId], references: [id])
  guestTeam          Team?     @relation("GuestTeam", fields: [guestTeamId], references: [id])
  
  invitation         TeamMatchInvitation?
  matches            Match[]
  attendances        ScheduleAttendance[]
  comments           ScheduleComment[]
  
  photos             String[]       // 사진 URL 배열

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  @@index([date, status])
  @@index([hostTeamId])
  @@index([year])
  @@map("schedules")
}

model ScheduleAttendance {
  id                     String   @id @default(cuid())
  scheduleId             String
  userId                 String
  isAttending            Boolean   @default(false)
  side                   TeamSide  @default(UNDECIDED)

  // MVP 투표 관련 필드
  bestPlayerVotedUserId  String?   // 내가 투표한 사람
  votesReceived          Int       @default(0) // 내가 받은 투표 수

  schedule               Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt              DateTime @default(now())
  
  @@unique([scheduleId, userId])
  @@index([scheduleId, isAttending])
  @@map("schedule_attendances")
}

model TeamMatchInvitation {
  id              String           @id @default(cuid())
  scheduleId      String           @unique
  invitedTeamId   String
  status          InvitationStatus @default(PENDING)
  reason          String?          // 거절 사유

  schedule        Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  invitedTeam     Team     @relation(fields: [invitedTeamId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([invitedTeamId, status])
  @@map("team_match_invitations")
}

model Match {
  id              String   @id @default(cuid())
  scheduleId      String
  order           Int      // 몇 번째 경기인지
  durationMinutes Int
  isEnded         Boolean  @default(false)
  
  // 점수
  homeScore       Int      @default(0)
  awayScore       Int      @default(0)
  
  createdById     String
  homeTeamId      String
  awayTeamId      String

  // 관계들
  schedule        Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  createdBy       User     @relation(fields: [createdById], references: [id])
  homeTeam        Team     @relation("MatchHomeTeam", fields: [homeTeamId], references: [id])
  awayTeam        Team     @relation("MatchAwayTeam", fields: [awayTeamId], references: [id])

  lineups         Lineup[]
  goals           GoalRecord[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([scheduleId, order])
  @@index([scheduleId])
  @@index([isEnded])
  @@map("matches")
}

model Lineup {
  id        String   @id @default(cuid())
  matchId   String
  userId    String
  side      TeamSide

  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([matchId, userId])
  @@index([matchId, side])
  @@map("lineups")
}

model GoalRecord {
  id          String   @id @default(cuid())
  matchId     String
  scorerId    String
  assistId    String?
  side        TeamSide
  order       Int

  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  scorer      User     @relation("Scorer", fields: [scorerId], references: [id])
  assist      User?    @relation("Assist", fields: [assistId], references: [id])

  createdAt   DateTime @default(now())
  
  @@index([matchId])
  @@index([scorerId])
  @@map("goal_records")
}

model ScheduleComment {
  id          String   @id @default(cuid())
  scheduleId  String
  authorId    String
  content     String

  schedule    Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  author      User     @relation(fields: [authorId], references: [id])
  
  createdAt   DateTime @default(now())
  
  @@index([scheduleId, createdAt])
  @@map("schedule_comments")
}

// ========== BOARD MODELS ==========

model Post {
  id        String   @id @default(cuid())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  team      Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String?
  title     String
  content   String
  type      BoardType   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([teamId, type])
  @@index([authorId])
  @@index([createdAt])
  @@map("posts")
}