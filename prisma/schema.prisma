// ========== ENUMS ==========

enum Foot {
  LEFT
  RIGHT
  BOTH
}

enum Gender {
  MALE
  FEMALE
}

enum Condition {
  NORMAL
  INJURED
}

// enum FootballPosition {
//   ST
//   LW
//   RW
//   AM
//   CM
//   DM
//   CB
//   LB
//   RB
//   GK
// }

enum Position {
 PIVO
 ALA
 FIXO
 GOLEIRO
}

enum TeamMemberStatus {
  PENDING
  APPROVED
  REJECTED
  LEAVE
}

enum TeamMemberRole {
  OWNER     // 팀장
  MANAGER   // 부팀장  
  MEMBER    // 일반 멤버
}

enum BoardType {
  GENERAL
  NOTICE
}

enum TeamGender {
  MALE
  FEMALE
  MIXED  
}

// enum RejectReason {
//   SCHEDULE_CONFLICT  // 일정 충돌
//   LOCATION_ISSUE     // 장소 문제
//   TEAM_CONDITION     // 팀 컨디션
//   OTHER              // 기타
// }

enum ActivityFrequency {
  WEEKLY      // 주 1회
  BIWEEKLY    // 격주
  MONTHLY     // 월 1회
  IRREGULAR   // 불규칙
}

enum PlayerBackground {
  NON_PROFESSIONAL  // 비선출
  PROFESSIONAL      // 선출
}

enum PlayerSkillLevel {
  BEGINNER     // 스타터
  AMATEUR      // 아마추어
  ACE          // 에이스
  SEMIPRO      // 세미프로
}

enum TeamLevel {
  VERY_LOW     // 하
  LOW          // 중하
  MID          // 중
  HIGH         // 중상
  VERY_HIGH    // 상
}

enum TeamStatus {
  ACTIVE
  INACTIVE
  DISBANDED
}

enum RecruitmentStatus {
  RECRUITING     // 모집중
  NOT_RECRUITING // 모집 안함
}

enum MatchType {
  SQUAD
  TEAM
}

enum ScheduleStatus {
  PENDING      // 친선전 수락 대기
  CONFIRMED    // 일정 확정됨 (자체전: 생성 즉시, 친선전: 상대 수락)
  READY        // 경기 생성됨, 라인업(출전명단) 대기 중
  PLAY         // 경기 진행 가능 → 참가 여부 변경 불가
  REJECTED     // 친선전 거절됨
  DELETED      // 삭제됨
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum TeamSide {
  HOME
  AWAY
  UNDECIDED
}

enum TeamType {
  HOST    // 호스트 팀
  INVITED // 초대받은 팀
}

// 참석 상태 enum 추가
enum AttendanceStatus {
  UNDECIDED     // 미정/투표하지 않음 (기본값)
  ATTENDING     // 참석
  NOT_ATTENDING // 불참
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum Period {
  DAWN     // 새벽 (00:00 ~ 05:59)
  MORNING  // 아침 (06:00 ~ 11:59)
  DAY      // 낮 (12:00 ~ 17:59)
  EVENING  // 저녁 (18:00 ~ 21:59)
  NIGHT    // 밤 (22:00 ~ 23:59)
}

// ========== AUTHENTICATION MODELS ==========

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   
  @@map("sessions")
}

// ========== CORE MODELS ==========

model User {
  id              String     @id @default(cuid())
  email           String?    @unique
  emailVerified   DateTime?  @map("email_verified")
  name            String?
  nickname        String?    @unique

  accounts        Account[]
  sessions        Session[]

  phone           String?   @unique
  image           String?

  foot            Foot?   // 'left' | 'right' | 'both'
  gender          Gender?   // 'male' | 'female'
  birthDate       String?   // YYYYMMDD 형식 (예: "19850312")
  height          Int?
  weight          Int?
  condition       Condition @default(NORMAL)

  // SNS 계정
  instagram       String?
  youtube         String?

  playerBackground PlayerBackground @default(NON_PROFESSIONAL) // 선수 출신 여부
  skillLevel       PlayerSkillLevel @default(BEGINNER) // 실력 수준

  position        Position?   
  teams           TeamMember[]

  // 팔로잉
  following       UserFollow[] @relation("Follower")    // 내가 팔로우하는 사람들
  followers       UserFollow[] @relation("Following")   // 나를 팔로우하는 사람들
  followingTeams  TeamFollow[]

  // 일정 관련
  createdSchedules Schedule[]
  attendances     ScheduleAttendance[]
  comments        ScheduleComment[]
  uploadedPhotos  SchedulePhoto[]      // 업로드한 사진들
  likedSchedules  ScheduleLike[] // 좋아요한 일정들

  // 매치 관련
  createdMatches  Match[]
  lineups         Lineup[]
  goals           GoalRecord[] @relation("Scorer")
  assists         GoalRecord[] @relation("Assist")

  // 게시판
  posts           Post[]

  // 팀원 평가 관계
  givenRatings    TeamMemberRating[] @relation("GivenRatings")
  receivedRatings TeamMemberRating[] @relation("ReceivedRatings") 

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
   
  @@map("users")
}

// 유저 간 팔로잉 관계
model UserFollow {
  id          String   @id @default(cuid())
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

// 팀 팔로잉 (기존 TeamLike 대체)
model TeamFollow {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
  @@map("team_follows")
}

model Team {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique // 가입 코드
  logoUrl       String?
  coverUrl      String?
  city          String
  district      String
  description   String?

  status        TeamStatus @default(ACTIVE)
  recruitmentStatus RecruitmentStatus @default(RECRUITING)
  teamMatchAvailable Boolean? @default(true)

  gender        TeamGender
  level         TeamLevel @default(MID)
  activityFrequency ActivityFrequency @default(WEEKLY)

  members       TeamMember[]  // TeamManager 제거하고 TeamMember로 통합
  posts         Post[]
  followers     TeamFollow[]  // 팔로워 (기존 likedByUsers 대체)

  // 일정 관련
  hostedSchedules  Schedule[] @relation("HostTeam")
  invitedSchedules Schedule[] @relation("InvitedTeam")
  invitations      TeamMatchInvitation[]

  // 매치 관련
  homeMatches      Match[]    @relation("MatchHomeTeam")
  awayMatches      Match[]    @relation("MatchAwayTeam")

  // 팀 멤버들의 평가 관계
  memberRatings   TeamMemberRating[] 

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([city, district])  // 지역 검색을 위한 인덱스
  @@index([level, gender])  // 종목별 검색을 위한 인덱스
  @@index([status, recruitmentStatus])
  @@index([name])
  @@index([createdAt])
  @@map("teams")
}

// TeamManager 모델 제거하고 TeamMember로 통합
model TeamMember {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  status    TeamMemberStatus @default(PENDING)
  role      TeamMemberRole   @default(MEMBER)   // 역할 추가
  banned    Boolean @default(false)
  joinedAt  DateTime?        // 실제 승인된 날짜
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bannedAt  DateTime?
  
  @@unique([teamId, userId], map: "team_user_unique")
  @@index([userId, status], map: "user_status_idx")
  @@index([teamId, status], map: "team_status_idx")
  @@index([teamId, role], map: "team_role_idx")
  @@index([teamId, role, status], map: "team_role_status_idx")
  @@map("team_members")
}

// 팀 멤버 평가 모델
model TeamMemberRating {
  id          String   @id @default(cuid())
  
  // 관계 필드
  teamId      String   // 어떤 팀에서의 평가인지
  fromUserId  String   // 평가를 준 사람
  toUserId    String   // 평가를 받은 사람
  
  // 평가 항목별 점수 (1-5점)
  shooting    Int      @default(1)  // 슈팅 (1-5)
  passing     Int      @default(1)  // 패스 (1-5)
  stamina     Int      @default(1)  // 체력 (1-5)
  physical    Int      @default(1)  // 피지컬 (1-5)
  dribbling   Int      @default(1)  // 드리블 (1-5)
  defense     Int      @default(1)  // 수비 (1-5)
  
  // 평가 기간 관련
  periodYear  Int      // 평가 연도 (2024, 2025 등)
  periodMonth Int      // 평가 월 (1-12)
  
  // 관계 설정
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  fromUser    User     @relation("GivenRatings", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser      User     @relation("ReceivedRatings", fields: [toUserId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // 제약 조건: 같은 팀에서 같은 평가자가 같은 피평가자를 같은 기간에 중복 평가 방지
  @@unique([teamId, fromUserId, toUserId, periodYear, periodMonth])
  
  // 인덱스 최적화
  @@index([teamId, toUserId])                   // 특정 팀의 특정 멤버 평가 조회
  @@index([teamId, periodYear, periodMonth])    // 특정 팀의 특정 기간 평가 조회
  @@index([toUserId, periodYear])               // 특정 사용자의 받은 평가 조회
  @@index([fromUserId])                         // 특정 사용자가 준 평가 조회
  
  @@map("team_member_ratings")
}

// ========== SCHEDULE & MATCH MODELS ==========

model Schedule {
  id                 String         @id @default(cuid())
  place              String
  description        String?
  date               String
  dayOfWeek          DayOfWeek?
  year               Int            // 연도 기반 통계용
  startTime          String
  startPeriod        Period?         // 추가: 시작 시간 기준 시간대
  endTime            String
  matchType          MatchType
  status             ScheduleStatus @default(PENDING)
  teamShareFee       Int?           // 참가비(풋살장 이용 분담금액)
  
  // 참석 투표 관련 필드
  enableAttendanceVote Boolean      @default(false)  // 참석 투표 활성화 여부
  attendanceDeadline   DateTime?                    // 참석 투표 마감 시간
  
  // 지역 정보 (team에서 가져오거나 별도 설정)
  city               String?
  district           String?
  
  createdById        String
  hostTeamId         String
  invitedTeamId      String?        

  // 팀에 배정된 용병 수
  hostTeamMercenaryCount    Int  @default(0)
  invitedTeamMercenaryCount Int? @default(0)

  // 관계들
  createdBy          User      @relation(fields: [createdById], references: [id])
  hostTeam           Team      @relation("HostTeam", fields: [hostTeamId], references: [id])
  invitedTeam        Team?     @relation("InvitedTeam", fields: [invitedTeamId], references: [id]) // 관계명 변경
  
  invitation         TeamMatchInvitation?
  matches            Match[]
  attendances        ScheduleAttendance[]
  comments           ScheduleComment[]
  photos             SchedulePhoto[]    // String[] -> 별도 모델로 변경
  likes              ScheduleLike[] // 좋아요 관계 추가
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  @@index([date, status])
  @@index([hostTeamId])
  @@index([invitedTeamId])
  @@index([year])
  @@index([city, district])           // 지역 검색용
  @@index([attendanceDeadline])       // 투표 마감 시간 검색용
  @@index([startPeriod])              // 추가: 시간대 검색용 인덱스
  @@index([date, startPeriod])        // 추가: 날짜와 시간대 복합 인덱스
  @@map("schedules")
}

// 새로운 사진 모델
model SchedulePhoto {
  id          String   @id @default(cuid())
  scheduleId  String
  uploaderId  String
  url         String
  
  schedule    Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  uploader    User     @relation(fields: [uploaderId], references: [id])
  
  createdAt   DateTime @default(now())
  
  @@index([scheduleId])
  @@index([uploaderId])
  @@index([scheduleId, createdAt])
  @@map("schedule_photos")
}

// 북마크 모델 추가
model ScheduleLike {
  id          String   @id @default(cuid())
  scheduleId  String
  userId      String
  
  schedule    Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@unique([scheduleId, userId]) // 같은 사용자가 같은 스케줄을 중복 북마크 방지
  @@index([userId])              // 사용자별 북마크 조회 최적화
  @@index([scheduleId])          // 스케줄별 북마크 수 조회 최적화
  @@map("schedule_likes")
}

model ScheduleAttendance {
  id                     String   @id @default(cuid())
  scheduleId             String
  userId                 String
  
  // 참석 여부 - enum으로 변경
  attendanceStatus       AttendanceStatus  @default(UNDECIDED)
  
  // 팀 소속 - 호스트 팀 또는 초대받은 팀 중 하나
  teamType               TeamType  @default(HOST)

  // 투표 시간 추가 (투표 현황 파악용)
  votedAt                DateTime?

  // MVP 투표 관련 필드
  mvpToUserId            String?   // 내가 MVP로 투표한 사람
  mvpReceived            Int       @default(0) // 내가 받은 MVP 투표 수

  schedule               Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt              DateTime @default(now())
  
  @@unique([scheduleId, userId])
  @@index([scheduleId, attendanceStatus])
  @@index([scheduleId, teamType])
  @@index([scheduleId, votedAt])  // 투표 현황 조회용
  @@map("schedule_attendances")
}

model TeamMatchInvitation {
  id              String           @id @default(cuid())
  scheduleId      String           @unique
  invitedTeamId   String
  status          InvitationStatus @default(PENDING)
  reason          String?          // 거절 사유
  message         String?          // 초청 메시지

  schedule        Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  invitedTeam     Team     @relation(fields: [invitedTeamId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([invitedTeamId, status])
  @@map("team_match_invitations")
}

model Match {
  id              String   @id @default(cuid())
  scheduleId      String
  durationMinutes Int?
  
  // 점수
  homeScore       Int      @default(0)
  awayScore       Int      @default(0)
  
  createdById     String
  homeTeamId      String
  awayTeamId      String
  isLinedUp       Boolean  @default(false)

  // 관계들
  schedule        Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  createdBy       User     @relation(fields: [createdById], references: [id])
  homeTeam        Team     @relation("MatchHomeTeam", fields: [homeTeamId], references: [id])
  awayTeam        Team     @relation("MatchAwayTeam", fields: [awayTeamId], references: [id])

  lineups         Lineup[]
  goals           GoalRecord[]

  undecidedTeamMercenaryCount Int @default(0)
  awayTeamMercenaryCount Int @default(0)
  homeTeamMercenaryCount Int @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([scheduleId])
  @@index([homeTeamId])
  @@index([awayTeamId])
  @@map("matches")
}

model Lineup {
  id        String   @id @default(cuid())
  matchId   String
  userId    String
  side      TeamSide @default(UNDECIDED)

  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([matchId, userId])
  @@index([matchId, side])
  @@map("lineups")
}

model GoalRecord {
  id          String   @id @default(cuid())
  matchId     String
  scorerSide  TeamSide // 실제 골을 넣은 선수가 속한 팀
  scorerId    String?
  assistId    String?

  // 자책골 여부
  isOwnGoal   Boolean @default(false)

  // 용병 여부
  isScoredByMercenary  Boolean @default(false)
  isAssistedByMercenary Boolean @default(false)

  createdAt   DateTime @default(now())

  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  scorer      User?    @relation("Scorer", fields: [scorerId], references: [id])
  assist      User?    @relation("Assist", fields: [assistId], references: [id])
  
  @@index([matchId])
  @@index([scorerId])
  @@index([assistId])
  @@index([matchId, createdAt])  // 골 순서 조회용
  @@index([matchId, isOwnGoal])  // 자책골 조회용
  @@map("goal_records")
}

model ScheduleComment {
  id          String   @id @default(cuid())
  scheduleId  String
  authorId    String
  content     String
  
  // 대댓글 관련 필드  
  parentId    String?              // 부모 댓글 ID (null이면 최상위 댓글, 값이 있으면 대댓글)
  
  // 관계 설정
  schedule    Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  author      User     @relation(fields: [authorId], references: [id])
  
  // 자기 참조 관계 (대댓글)
  parent      ScheduleComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies     ScheduleComment[] @relation("CommentReplies")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([scheduleId, createdAt])
  @@index([parentId])
  @@index([scheduleId, parentId, createdAt]) // 특정 일정의 댓글 조회 최적화
  @@map("schedule_comments")
}

// ========== BOARD MODELS ==========

model Post {
  id        String   @id @default(cuid())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  team      Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String?
  title     String
  content   String
  type      BoardType   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([teamId, type])
  @@index([authorId])
  @@index([createdAt])
  @@map("posts")
}