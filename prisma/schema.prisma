}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Foot {
  LEFT
  RIGHT
  BOTH
}

enum Gender {
  MALE
  FEMALE
}

enum Condition {
  NORMAL
  INJURED
}

