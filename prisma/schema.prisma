enum Position {
 PIVO
 ALA
 FIXO
 GOLEIRO
}

enum MatchSide {
  HOME
  AWAY
}

enum MatchRule {
  HALF
  MINI
}

enum AttendanceStatus {
  ATTENDING
  ABSENT
  UNDECIDED
}

enum TeamMemberStatus {
  PENDING
  APPROVED
  REJECTED
  LEAVE
}

enum TeamMemberRole {
  OWNER     // 팀장
  MANAGER   // 매니저  
  MEMBER    // 일반 멤버
}

enum BoardType {
  GENERAL
  NOTICE
}

enum MatchRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum RejectReason {
  SCHEDULE_CONFLICT  // 일정 충돌
  LOCATION_ISSUE     // 장소 문제
  TEAM_CONDITION     // 팀 컨디션
  OTHER              // 기타
}

enum TeamGender {
  MALE
  FEMALE
  MIXED  
}

enum ActivityFrequency {
  WEEKLY      // 주 1회
  BIWEEKLY    // 격주
  MONTHLY     // 월 1회
  IRREGULAR   // 불규칙
}

enum PlayerBackground {
  NON_PROFESSIONAL  // 비선출
  PROFESSIONAL      // 선출
}

enum PlayerSkillLevel {
  BEGINNER     // 비기너
  AMATEUR      // 아마추어
  ACE          // 에이스
  SEMIPRO      // 세미프로
}

enum TeamLevel {
  VERY_LOW     // 하
  LOW          // 중하
  MID          // 중
  HIGH         // 중상
  VERY_HIGH    // 상
}

enum TeamStatus {
  ACTIVE
  INACTIVE
  DISBANDED
}

enum RecruitmentStatus {
  RECRUITING     // 모집중
  NOT_RECRUITING // 모집 안함
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   
  @@map("sessions")
}

model User {
  id              String     @id @default(cuid())
  email           String?    @unique
  emailVerified   DateTime?  @map("email_verified")
  name            String?
  nickname        String?    @unique

  accounts        Account[]
  sessions        Session[]

  phone           String?   @unique
  image           String?

  foot            Foot?   // 'left' | 'right' | 'both'
  gender          Gender?   // 'male' | 'female'
  birthDate       String?   // YYYYMMDD 형식 (예: "19850312")
  height          Int?
  weight          Int?

  playerBackground PlayerBackground @default(NON_PROFESSIONAL) // 선수 출신 여부
  skillLevel       PlayerSkillLevel @default(BEGINNER) // 실력 수준

  position         Position?   
  condition        Condition @default(NORMAL)

  teams           TeamMember[]

  // 팔로잉/팔로워 관계 (유저 간)
  following       UserFollow[] @relation("Follower")    // 내가 팔로우하는 사람들
  followers       UserFollow[] @relation("Following")   // 나를 팔로우하는 사람들
  
  // 팀 팔로잉
  followingTeams  TeamFollow[]

  scoredGoals     AttackPoint[] @relation("Scorer")
  assistedGoals   AttackPoint[] @relation("Assist")
  receivedVotes   Vote[]    @relation("BestPlayer")
  votes           Vote[]
  
  uploadedPhotos  MatchDayPhoto[]
  posts           Post[]
  matchPlayers    MatchPlayer[]
  matchDayMembers MatchDayMember[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
   
  @@map("users")
}

// 유저 간 팔로잉 관계
model UserFollow {
  id          String   @id @default(cuid())
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

// 팀 팔로잉 (기존 TeamLike 대체)
model TeamFollow {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
  @@map("team_follows")
}

model Team {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique // 가입 코드
  logoUrl       String?
  coverUrl      String?
  city          String
  district      String
  description   String?

  status        TeamStatus @default(ACTIVE)
  recruitmentStatus RecruitmentStatus @default(RECRUITING)

  gender        TeamGender
  level         TeamLevel @default(MID)
  activityFrequency ActivityFrequency @default(WEEKLY)

  members       TeamMember[]  // TeamManager 제거하고 TeamMember로 통합
  posts         Post[]
  matchDays     MatchDayTeam[]
  followers     TeamFollow[]  // 팔로워 (기존 likedByUsers 대체)

  sentMatchRequests     TeamMatchRequest[] @relation("RequestorTeam")
  receivedMatchRequests TeamMatchRequest[] @relation("TargetTeam")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([city, district])  // 지역 검색을 위한 인덱스
  @@index([level, gender])  // 종목별 검색을 위한 인덱스
}

// TeamManager 모델 제거하고 TeamMember로 통합
model TeamMember {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  status    TeamMemberStatus @default(PENDING)
  role      TeamMemberRole   @default(MEMBER)   // 역할 추가
  banned    Boolean @default(false)
  joinedAt  DateTime?        // 실제 승인된 날짜
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bannedAt  DateTime?
  
  @@unique([teamId, userId])
  @@index([userId, status])
  @@index([teamId, status])
  @@index([teamId, role])  // 역할별 조회를 위한 인덱스
  @@index([teamId, role, status]) // 복합 인덱스 추가
  @@unique([teamId, userId], name: "teamId_userId_unique")
}

model MatchDay {
  id          String     @id @default(cuid())
  date        DateTime
  city        String?
  district    String?
  location    String?
  description String?
  teams       MatchDayTeam[]
  matches     Match[]
  photos      MatchDayPhoto[]
  members     MatchDayMember[]
  votes       Vote[]
  createdAt   DateTime   @default(now())
  
  @@index([date])
  @@index([city, district])
}

model MatchDayTeam {
  id        String   @id @default(cuid())
  matchDay  MatchDay @relation(fields: [matchDayId], references: [id], onDelete: Cascade)
  matchDayId String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  isHome    Boolean  @default(true)
  
  @@unique([matchDayId, teamId])
  @@index([teamId])
}

model Match {
  id            String    @id @default(cuid())
  matchDay      MatchDay  @relation(fields: [matchDayId], references: [id], onDelete: Cascade)
  matchDayId    String
  rule          MatchRule
  durationMin   Int       // 경기 시간 (ex. 15분)
  homeScore     Int       @default(0)
  awayScore     Int       @default(0)
  attackPoints  AttackPoint[]
  players       MatchPlayer[]
  createdAt     DateTime  @default(now())
  
  @@index([matchDayId])
}

model MatchPlayer {
  id        String   @id @default(cuid())
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  side      MatchSide
  
  @@unique([matchId, userId])
  @@index([userId])
}

model MatchDayMember {
  id         String   @id @default(cuid())
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id], onDelete: Cascade)
  matchDayId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  status     AttendanceStatus @default(UNDECIDED)
  side       MatchSide?  // 'home' | 'away' | null
  
  @@unique([matchDayId, userId])
  @@index([userId, status])
  @@index([matchDayId, status])
}

model AttackPoint {
  id        String   @id @default(cuid())
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId   String
  scorer    User     @relation("Scorer", fields: [scorerId], references: [id], onDelete: Cascade)
  scorerId  String
  assist    User?    @relation("Assist", fields: [assistId], references: [id], onDelete: SetNull)
  assistId  String?
  order     Int
  half      MatchRule?  
  
  @@index([scorerId])
  @@index([matchId])
  @@index([assistId])
}

model MatchDayPhoto {
  id         String   @id @default(cuid())
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id], onDelete: Cascade)
  matchDayId String
  url        String
  uploadedBy User     @relation(fields: [uploadedById], references: [id], onDelete: Cascade)
  uploadedById String
  createdAt  DateTime @default(now())
  
  @@index([matchDayId])
  @@index([uploadedById])
}

model Post {
  id        String   @id @default(cuid())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  team      Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String?
  title     String
  content   String
  type      BoardType   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([teamId, type])
  @@index([authorId])
  @@index([createdAt])
}

model Vote {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id], onDelete: Cascade)
  matchDayId String
  bestPlayer    User     @relation("BestPlayer", fields: [bestPlayerId], references: [id], onDelete: Cascade)
  bestPlayerId  String
  createdAt  DateTime @default(now())
  
  @@unique([userId, matchDayId])
  @@index([matchDayId])
  @@index([bestPlayerId])
}

model TeamMatchRequest {
  id           String   @id @default(cuid())
  requestorId  String
  requestor    Team     @relation("RequestorTeam", fields: [requestorId], references: [id], onDelete: Cascade)
  targetId     String?    
  target       Team?    @relation("TargetTeam", fields: [targetId], references: [id], onDelete: SetNull)
  
  proposedDate DateTime
  city         String
  district     String
  location     String?

  message      String?

  status       MatchRequestStatus @default(PENDING)
  rejectReason RejectReason?
  rejectMessage String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([status, proposedDate])
  @@index([requestorId, status])
  @@index([targetId, status])
}