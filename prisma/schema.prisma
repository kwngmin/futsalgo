generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Foot {
  LEFT
  RIGHT
  BOTH
}

enum Gender {
  MALE
  FEMALE
}

enum Condition {
  NORMAL
  INJURED
}

enum SportType {
  FUTSAL
  FOOTBALL
  ALL
}

enum FootballPosition {
  ST
  LW
  RW
  AM
  CM
  DM
  CB
  LB
  RB
  GK
}

enum FutsalPosition {
 PIVO
 ALA
 FIXO
 GOLEIRO
}

enum MatchSide {
  HOME
  AWAY
}

enum MatchRule {
  HALF
  MINI
}

enum AttendanceStatus {
  ATTENDING
  ABSENT
  UNDECIDED
}

enum TeamMemberStatus {
  PENDING
  APPROVED
  REJECTED
  LEAVE
}

enum BoardType {
  GENERAL
  NOTICE
}

enum MatchRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum RejectReason {
  SCHEDULE_CONFLICT  // 일정 충돌
  LOCATION_ISSUE     // 장소 문제
  TEAM_CONDITION     // 팀 컨디션
  OTHER              // 기타
}

enum TeamGender {
  MALE
  FEMALE
  MIXED  // 혼성팀도 고려
}

enum ActivityFrequency {
  WEEKLY      // 주 1회
  BIWEEKLY    // 격주
  MONTHLY     // 월 1회
  IRREGULAR   // 불규칙
}

enum PlayerBackground {
  NON_PROFESSIONAL  // 비선출
  PROFESSIONAL      // 선출
}

enum SkillLevel {
  BEGINNER     // 비기너
  AMATEUR      // 아마추어
  ACE          // 에이스
  SEMIPRO      // 세미프로
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   
  @@map("sessions")
}

model User {
  id              String     @id @default(cuid())
  email           String?    @unique
  emailVerified   DateTime?  @map("email_verified")
  name            String
  nickname        String?    @unique

  accounts        Account[]
  sessions        Session[]

  phone           String?   @unique
  image           String?

  foot            Foot?   // 'left' | 'right' | 'both'
  gender          Gender?   // 'male' | 'female'
  birthDate       String?   // YYYYMMDD 형식 (예: "19850312")
  height          Int?
  weight          Int?

  playerBackground PlayerBackground @default(NON_PROFESSIONAL) // 선수 출신 여부
  skillLevel      SkillLevel @default(BEGINNER) // 실력 수준

  sportType        SportType?  // 종목 선택
  footballPositions FootballPosition[]   
  futsalPosition   FutsalPosition?   
  condition        Condition @default(NORMAL)

  teams           TeamMember[]
  ownedTeams      Team[]    @relation("TeamOwner")
  viceLeaderTeams TeamViceLeader[]

 // 팔로잉/팔로워 관계 (유저 간)
  following       UserFollow[] @relation("Follower")    // 내가 팔로우하는 사람들
  followers       UserFollow[] @relation("Following")   // 나를 팔로우하는 사람들
  
  // 팀 팔로잉
  followingTeams  TeamFollow[]

  scoredGoals     AttackPoint[] @relation("Scorer")
  assistedGoals   AttackPoint[] @relation("Assist")
  receivedVotes   Vote[]    @relation("BestPlayer")
  votes           Vote[]
  
  uploadedPhotos  MatchDayPhoto[]
  posts           Post[]
  matchPlayers MatchPlayer[]
  matchDayMembers MatchDayMember[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
   
  @@map("users")
}


// 유저 간 팔로잉 관계
model UserFollow {
  id          String   @id @default(cuid())
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

// 팀 팔로잉 (기존 TeamLike 대체)
model TeamFollow {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
  @@index([userId])
  @@index([teamId])
  @@map("team_follows")
}

model Team {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique // 가입 코드
  logoUrl       String?
  coverUrl      String?
  city          String
  district      String
  description   String?

  gender        TeamGender @default(MIXED)  // 팀 성별
  activityFrequency ActivityFrequency @default(WEEKLY)

  ownerId       String
  owner         User      @relation("TeamOwner", fields: [ownerId], references: [id])
  viceLeaders   TeamViceLeader[]
  members       TeamMember[]
  posts         Post[]
  matchDays     MatchDayTeam[]
  followers     TeamFollow[]  // 팔로워 (기존 likedByUsers 대체)

  sentMatchRequests     TeamMatchRequest[] @relation("RequestorTeam")
  receivedMatchRequests TeamMatchRequest[] @relation("TargetTeam")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model TeamViceLeader {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model TeamMember {
  id        String   @id @default(cuid())
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  status    TeamMemberStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([teamId, userId])
  @@index([userId, status])
}

model MatchDay {
  id          String     @id @default(cuid())
  date        DateTime
  city        String?
  district    String?
  location    String?
  description String?
  teams       MatchDayTeam[]
  matches     Match[]
  photos      MatchDayPhoto[]
  members     MatchDayMember[]
  votes       Vote[]
  createdAt   DateTime   @default(now())
}

model MatchDayTeam {
  id        String   @id @default(cuid())
  matchDay  MatchDay @relation(fields: [matchDayId], references: [id])
  matchDayId String
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    String
  isHome    Boolean  @default(true)
}

model Match {
  id            String    @id @default(cuid())
  matchDay      MatchDay  @relation(fields: [matchDayId], references: [id])
  matchDayId    String
  rule          MatchRule
  durationMin   Int       // 경기 시간 (ex. 15분)
  homeScore     Int       @default(0)
  awayScore     Int       @default(0)
  attackPoints  AttackPoint[]
  players      MatchPlayer[]
  createdAt     DateTime  @default(now())
}

model MatchPlayer {
  id        String   @id @default(cuid())
  match     Match    @relation(fields: [matchId], references: [id])
  matchId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  side      MatchSide
}

model MatchDayMember {
  id         String   @id @default(cuid())
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id])
  matchDayId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  status     AttendanceStatus @default(UNDECIDED)
  side       MatchSide?  // 'home' | 'away' | null
  @@unique([matchDayId, userId])
  @@index([userId, status])
}

model AttackPoint {
  id        String   @id @default(cuid())
  match     Match    @relation(fields: [matchId], references: [id])
  matchId   String
  scorer    User     @relation("Scorer", fields: [scorerId], references: [id])
  scorerId  String
  assist    User?    @relation("Assist", fields: [assistId], references: [id])
  assistId  String?
  order     Int
  half      MatchRule?  
  @@index([scorerId])
  @@index([matchId])
}

model MatchDayPhoto {
  id         String   @id @default(cuid())
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id])
  matchDayId String
  url        String
  uploadedBy User     @relation(fields: [uploadedById], references: [id])
  uploadedById String
}

model Post {
  id        String   @id @default(cuid())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  title     String
  content   String
  type      BoardType   
  createdAt DateTime @default(now())
}

model Vote {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  matchDay   MatchDay @relation(fields: [matchDayId], references: [id])
  matchDayId String
  bestPlayer    User     @relation("BestPlayer", fields: [bestPlayerId], references: [id])
  bestPlayerId  String
}

model TeamMatchRequest {
  id           String   @id @default(cuid())
  requestorId  String
  requestor    Team     @relation("RequestorTeam", fields: [requestorId], references: [id])
  targetId     String?
  target       Team?    @relation("TargetTeam", fields: [targetId], references: [id])
  
  proposedDate DateTime
  city         String
  district     String
  location     String?

  message      String?

  status       MatchRequestStatus @default(PENDING)
  rejectReason RejectReason?
  rejectMessage String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([status, proposedDate])
  @@index([requestorId, status])
  @@index([targetId, status])
}